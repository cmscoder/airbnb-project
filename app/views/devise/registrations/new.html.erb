<div class="container">
  <div class="col-6 offset-3 px-5 py-3 shadow rounded-lg mt-5">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <h2 class="text-center mb-3">Sign up</h2>
      <div class="form-inputs">
        <%= f.input :first_name, required: true, label: false, placeholder: "First Name" %>
        <%= f.input :last_name, required: true, label: false, placeholder: "Last Name" %>
        <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email address:" %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false , placeholder: "Password" %>
        <%= f.input :password_confirmation, required: true, label: false, placeholder: "Password confirmation" %>
        <%=  f.input :age, required:true, label: false, placeholder: "Age" %>
        <%=  f.input :role, :collection => %w[Teacher Student], label: false, placeholder: "Role" %>
      </div>
      <div class="text-center">
        <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
      <div class="text-center mt-3">
        <%= link_to "Login", new_user_session_path, class: ""%>
      </div>
  </div>
</div>

