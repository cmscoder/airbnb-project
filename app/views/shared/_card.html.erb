
<% @lessons.each do |lesson| %>
  <%= link_to lesson_path(lesson) do  %>
  <div class="card">
      <div class="image">
        <%= image_tag "surf-lessons.jpg" %>
      </div>
        <div class="card-product-infos">
          <h2>Surf Lesson</h2>
          <p><%= lesson.description %></p>
          <p id="time"><strong>From <%= lesson.start_time %> to <%= lesson.end_time %> on <%= lesson.week_day %></strong></p>
          <p><%= lesson.max_attendees %> Spots Available</p>
         </div>
         <div class="card-location">
          <div>
            <h2>Location</h2>
           <p><%= lesson.location %></p>
          </div>
         </div>
     </div>
  <% end %>
<% end %>





